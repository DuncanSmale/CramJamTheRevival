<% layout('layouts/boilerplate') -%>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create a new link</h1>
            <div style="width: 30%; margin: 25px auto">
                <form action='/links' method='POST'>
                    <div class="form-group mt-2">
                        <input class="form-control" type='text' name='name' placeholder='Title' maxlength="100"
                            required>
                    </div>
                    <div class="form-group mt-2">
                        <input class="form-control" type='text' name='note' placeholder='Note' maxlength="300" required>
                    </div>
                    <div class="form-group mt-2">
                        <input class="form-control " type='text' name='url' placeholder='Link URL' maxlength="1000"
                            required>
                    </div>
                    <div class="input-group col-lg-6 mb-4 mt-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-users py-2 mb-1 text-muted"></i>
                            </span>
                        </div>
                        <select class="custom-select form-control bg-white border-left-0 border-md text-muted" id="list"
                            type='Group' name='selectedGroup' placeholder='Group' required>
                            <% for (let group of groups){%>
                                <option value=<%=group._id%>>
                                    <%=group.name %>
                                </option>
                                <% }%>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="header-btn theme-btn text-center mt-2">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>