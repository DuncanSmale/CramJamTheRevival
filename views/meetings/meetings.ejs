<% layout('layouts/boilerplate') -%>
    <section class="meeting-create ">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="row">
                        <h2>Create new meeting</h2>
                    </div>
                    <form action="/meetings" method="POST">
                        <div class="row align-items-center">
                            <div class="col-lg-4">
                                <input type="text" name="GroupName" placeholder="Group Name" class="form-control">
                            </div>
                            <div class="col-lg-2">
                                <input type="time" name="StartTime" placeholder="Start Time" class="form-control">
                            </div>
                            <div class="col-lg-2">
                                <input type="time" name="EndTime" placeholder="End Time" class="form-control">
                            </div>
                            <div class="col-lg-2">
                                <button type="submit" class="header-btn theme-btn text-decoration-none">Create!</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="mask col-lg-6">
                    <img src="assets/student_meeting.jpg" alt="" class="img-fluid mb-2 d-none d-md-block">
                </div>
            </div>

