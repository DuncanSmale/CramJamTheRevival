
  <% if(success && success.length) { %>
      <div id = "toast-container" class="toast" style="position: fixed; top: 110px; right: 20px" role="alert" aria-atomic="true">
        <div class="toast-header bg-success">
          <!-- <img src="..." class="rounded me-2" alt="..."> -->
          <strong class="me-auto text-white">Success</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <%= success %>
        </div>
      </div>
    <% } %>

    <% if(error && error.length) { %>
      <div id = "toast-container" class="toast" style="position: fixed; top: 110px; right: 20px" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-danger">
          <!-- <img src="..." class="rounded me-2" alt="..."> -->
          <strong class="me-auto text-white">Error</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <%= error %>
        </div>
      </div>
    <% } %>

