<div class="bg-modal" id="<%= id %>">
	<div class="modal-contents">
        <div class="close">+</div>

            <% if(action == 'leave group'){ %>
                
                <h3>Are you sure?</h3>
                <hr>
                <p>Are you sure you want to leave <b><%= group.name %></b>?</p>
                <p>This action cannot be undone.</p>
                <div class='row justify-content-center'>
                    <div class="col-lg-5 text-center"> 
                        <form action="/groups/<%= group._id %>" method="GET">
                            <button class="theme-btn-light text-decoration-none">Nevermind</button>
                        </form>
                    </div>
                    <div class="col-lg-5 text-center "> 
                        <form action="/groups/<%= group._id %>/edit/<%= signedInUser._id %>?_method=delete" method="post">
                            <button class="theme-btn text-decoration-none">Leave</button>
                        </form>
                    </div>
                </div>
            <% } %>
            <% if(action == 'remove user'){ %>
                <h3>Removing user</h3>
                <hr>
                <p>Why should this user be removed from this group?</p>
                <div class="dropdown" style="margin-bottom: 2em;">
                    <select class="form-select" aria-label="Kick Reason" id="kickReason">
                        <% let count = 0 %>
                        <% for(let reason of reasons) { %> 
                        <% let selected = count == 0 ? "selected" : '' %>
                        <option value="<%= reason %>" <%= selected %> ><%= reason %></option>
                        <% count++ %>
                        <% } %> 
                      </select>
                  </div>
                <div class='row justify-content-center' style="margin-top: 2em;">
                    <div class="col-lg-5 text-center">
                        <button id="cancel" class="theme-btn-light text-decoration-none">Cancel</button>
                    </div>
                    <div class="col-lg-5 text-center">
                        <button class="theme-btn text-decoration-none" type="button" id="kickBtn">Submit</button>
                    </div>
                </div>
            <% } %> 
	</div>
</div>