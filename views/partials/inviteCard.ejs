<div class="card px-5 py-2 mb-3">
    <div class="row">
        <div class="col-lg-12">
            <h5 class="card-title text-center"> Invited to join <%= invite.name %>
            </h5>
        </div>
    </div>
    <hr>
    <div class="row">
            <form action="/groups/<%= invite._id %>/declineInvite" method="POST" class="col-lg-6 text-center">
                <button class="btn poll-yes"><i class="fas fa-check"></i></button>
            </form>
            <form action="/groups/<%= invite._id %>/acceptInvite" method="POST" class="col-lg-6 text-center">
                <button class="btn poll-no"><i class="fas fa-times"></i></button>
            </form>
    </div>
</div>