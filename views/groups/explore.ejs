<% layout('layouts/boilerplate') -%>
    <div class="container">
        <h1>Invite:</h1>
        <hr>
        <div class="row">
            <% students.forEach(student=> { %>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-2">
                    <div class="card me-1 py-3 px-4">
                        <div class="row">
                            <h3>
                                <%= student.firstName %>
                                    <%= student.lastName %>
                            </h3>
                            <h6>Email: <%= student.email %>
                            </h6>
                        </div>
                        <div class="row text-center text-decoration-none mt-3">
                            <% if(student.groups.length != 10) {%>
                            <form action="/polls/<%=group._id%>/Invite/<%=student._id%>" method="POST"
                                class="col-lg-12">
                                <button class="btn explore-btn">Invite</button>
                            </form>
                            <% } else{%>
                                <p>This user has reached their group limit.</p>
                            <% } %>
                        </div>
                        
                    </div>
                </div>

                <% }); %>
                    <hr>
        </div>
    </div>