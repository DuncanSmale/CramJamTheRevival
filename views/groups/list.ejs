<%- layout('layouts/boilerplate') -%>

<div class="container">

    <hr>
    <h2>Invite:</h2>
    <hr>
    <% students.forEach(student=> { %>
        <div>
            <h3>
                <%= student.firstName %>
                    <%= student.lastName %>
            </h3>
            <h5>Email: <%= student.email %>
            </h5>
            <form action="/polls/<%=group._id%>/Invite/<%=student._id%>" method="POST">
                <button>Invite to group</button>
            </form>
        </div>
        <hr>
        <% }); %>
</div>