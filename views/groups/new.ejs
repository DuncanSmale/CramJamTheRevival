               <form action="/groups/new" method="POST"  onkeydown="return event.key != 'Enter';">
                    <div class="row align-items-center py-2">
                        <div class="col-lg-12">
                            <label><strong>NAME</strong></label>
                            <input type="name" id="name" name="name" placeholder="Group Name" class="form-control" required>
                        </div>
                    </div>
                    <div class="row align-items-center py-2">
