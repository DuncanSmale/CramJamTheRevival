<% layout('layouts/boilerplate') -%>
    <div class="container">
        <div class="row align-items-center">
            <div class="group-mask col-lg-6">
                <img src="assets/study-group.png" alt="" class="img-fluid mb-2 d-none d-md-block">
            </div>
            <div class="col-lg-5">
                <div class="row">
                    <h2>Create new Group</h2>
                </div>
                <hr>
               <form action="/groups/new" method="POST"  onkeydown="return event.key != 'Enter';">
                    <div class="row align-items-center py-2">
                        <div class="col-lg-12">
                            <label><strong>NAME</strong></label>
                            <input type="name" id="name" name="name" placeholder="Group Name" class="form-control" required>
                        </div>
                    </div>
                    <div class="row align-items-center py-2">
                        <div class="col-lg-12">
                            <label><strong>DESCRIPTION</strong></label>
                            <input type="text" name="description" placeholder="Group Description" class="form-control">
                        </div>
                    </div>
                    <div class="row align-items-center py-2">
                        <div class="col-lg-12">
                            <label><strong>TAGS</strong></label>
                            <div class="card mb-3">
                                <div class="tags-input" data-name="tags" id="tags-input">
                                </div>
            
                                <script>
                                    const allTags = <%- JSON.stringify(allTags) %> //note this has to look like <%- %> if saving please save without formatting
                                </script>
                                <script src="/js/tags.js"></script>
                            </div>

                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-lg-6 text-center px-4">
                            <button type="reset" class="header-btn theme-btn-light text-decoration-none">Clear</button>
                        </div>
                        <div class="col-lg-6 text-center">
                            <button type="submit" class="header-btn theme-btn text-decoration-none">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>