<% layout('layouts/boilerplate') -%>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 card mb-3 py-3">
                            <h3>
                                <%= group.name %>
                            </h3>
                            <h5>Group description goes here</h5>
                        </div>
                    </div>

                    <div class="row mb-4 mt-3">
                        <div class="col-lg-12 card py-3">
                            <h5>Group members (<%= group.members.length%>)</h5>
                            <hr>
                            <% for (var i=0; i < group.members.length; i++) { %>
                                <li class="row">
                                    <div class="col-lg-6">
                                        <%= `${group.members[i].firstName} ${group.members[i].lastName} ` %>
                                            <% if(!group.members[i]._id.equals(signedInUser._id) ) { %>
                                            <form class="d-inline"
                                                action="/polls/<%=group._id%>/Remove/<%=group.members[i]._id%>"
                                                method="POST" method="POST">
                                                <button class="btn remove-btn"><i class="fas fa-times"></i></button>
                                            </form>
                                             <% } %>
                                    </div>
                                   
                                    <div class="col-lg-6">
                                        <% const raters=(group.members[i].rating.map(e=> e.rater)) %>
                                            <% if(signedInUser && !group.members[i]._id.equals(signedInUser._id) &&
                                                !raters.includes(signedInUser._id)) { %>
                                                <form action="/students/vote/<%=group.members[i]._id%>/" method="POST"
                                                    class="">
                                                    <div class="rate">
                                                        <input type="radio" id="star5_<%= i%>" name="rating" value="5" />
                                                        <label for="star5_<%= i%>">5 stars</label>
                                                        <input type="radio" id="star4_<%= i%>" name="rating" value="4" />
                                                        <label for="star4_<%= i%>">4 stars</label>
                                                        <input type="radio" id="star3_<%= i%>" name="rating" value="3" />
                                                        <label for="star3_<%= i%>">3 stars</label>
                                                        <input type="radio" id="star2_<%= i%>" name="rating" value="2" />
                                                        <label for="star2_<%= i%>" >2 stars</label>
                                                        <input type="radio" id="star1_<%= i%>" name="rating" value="1" />
                                                        <label for="star1_<%= i%>">1 star</label>
                                                    </div>
                                                    <button class="d-inline btn rate-btn align-items-center"><i
                                                            class="fas fa-check"></i></button>
                                                </form>
                                                <% } %>
                                    </div>
                                </li>
                                
                                <% } %>
                                    <% if (group.invites.length> 0) {%>
                                        <hr>
                                        <h5>Pending invites</h5>
                                        <% for (var i=0; i < group.invites.length; i++) { %>
                                            <li>
                                                <%= group.invites[i].username%>
                                            </li>
                                            <% } %>
                                                <% } %>
                                                <hr>
                                                    <div class="text-center">
                                                        <a class="header-btn theme-btn text-decoration-none mt-3 "
                                                            href="/groups/<%=group._id%>/explore"> Invite new
                                                            members
                                                        </a>
                                                    </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <% for (let poll of groupPolls){%>
                   <%- include('../partials/pollCard.ejs', {poll:poll}) %>
                    <% }%>
            </div>
        </div>
    </div>